<%= form_for(@post) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>


    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |c| %>
        <%= c.label %>
        <%= c.check_box %>
    <% end %>

    <%= f.fields_for :categories do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>

    <%= f.submit %>
<% end %>